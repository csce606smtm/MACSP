<ul class="nav nav-tabs">
    <li><%= link_to 'Schedule', '#' %></li>
    <li><%= link_to 'Judge', new_admin_setup_judge_path %></li>
    <li class="active"><%= link_to 'Auctioneer', new_admin_setup_auctioneer_path %></li>
</ul>

<h2>Add Auctioneer</h2>

  <%= form_for @user, url: {action: "create"}, :html => {:class => 'form-horizontal'} do |f| %>

  <%= render 'shared/errors', object: @user %>
    
    <div class="form-group">
      <label class="control-label col-sm-2">
        <%= f.label :name %>
      </label>
      <div class="col-sm-10">
        <%= f.text_field :name, class: 'form-control', placeholder: 'Enter full name', required: true %>
      </div>
    </div>
  
    <div class="form-group">
      <label class="control-label col-sm-2">
        <%= f.label :email %>
      </label>
      <div class="col-sm-10">
        <%= f.email_field :email, class: 'form-control', placeholder: 'Enter email', required: true %>
      </div>
    </div>
     
     <div class="form-group">
      <label class="control-label col-sm-2"><%= f.label :password %></label>
      <div class="col-sm-10"> 
        <%= f.password_field :password, class: 'form-control', placeholder: 'Enter password', required: true %>
      </div>
    </div>
    
    <div class="form-group">
      <label class="control-label col-sm-2">
        <%= f.label :password_confirmation %>
      </label>
      <div class="col-sm-10">
        <%= f.password_field :password_confirmation, class: 'form-control', placeholder: 'Confirm password', required: true %>
      </div>
    </div>
    
    <div class="form-group">  
      <label class="control-label col-sm-2">Select level:
      </label>
      <div class="col-sm-offset-2 col-sm-10">
          <label class="checkbox-inline">
            <%#= f.label :level %>
            <input type="checkbox" value="">Rookie
          </label>
          <label class="checkbox-inline">
            <%#= f.label :level %>
            <input type="checkbox" value="">Newbie
          </label>
          <label class="checkbox-inline">
            <%#= f.label :level %>
            <input type="checkbox" value="">Texan
          </label>
      </div>
    </div>
    
    <div class="form-group"> 
      <div class="col-sm-offset-2 col-sm-10">
        <%= f.submit 'Add Auctioneer', class: 'btn btn-primary btn-med' %>
      </div>
    </div>
    
  <% end %>


<div class="container">
  <h2>Current Auctioneer</h2>
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Name</th>
        <th>Class</th>
        <th>Email</th>
        <th>Score Sheet</th>
        <th>Edit/Delete</th>
      </tr>
    </thead>
    
    <tbody>
      <% @member.each do |value|%>
      <tr>
        <td><%= value.name %></td>
        <td><%#= value.level %></td>
        <td><%= value.email %></td>
        <td><%#= value.level %></td>
        <td><%=  link_to 'Delete', admin_setup_auctioneer_path(value), :method => :delete %></td>

      </tr>
      <% end %>
    </tbody>
  </table>
</div>